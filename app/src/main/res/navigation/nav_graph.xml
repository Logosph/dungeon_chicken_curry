<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/createRoom1Fragment">

    <fragment
        android:id="@+id/createRoom1Fragment"
        android:name="ru.logosph.dungeon_chicken_curry.ui.fragments.CreateRoom1Fragment"
        android:label="fragment_create_room_1"
        tools:layout="@layout/fragment_create_room_1" >
        <action
            android:id="@+id/action_createRoom1Fragment_to_createRoom2Fragment"
            app:destination="@id/createRoom2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/createRoom2Fragment"
        android:name="ru.logosph.dungeon_chicken_curry.ui.fragments.CreateRoom2Fragment"
        android:label="fragment_create_room_2"
        tools:layout="@layout/fragment_create_room_2" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.logosph.dungeon_chicken_curry.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="ru.logosph.dungeon_chicken_curry.ui.fragments.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>